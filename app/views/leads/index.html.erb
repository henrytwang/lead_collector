<div class="main-logo">
  <%= link_to image_tag("42floors.png"), "http://www.42floors.com", target: "_blank" %>
</div>

<div class="main-content large-6 large-centered columns">
  <h1 class="title">
    Reserve Your Free Office Photoshoot Today
  </h1>
  <h2 class="subtitle">
    Generate 47% More Tours. Available for San Francisco and NYC CRE listings.
  </h2>

  <%= form_for Lead.new, :validate => true do |f| %>
  <div class="row">
    <div class="large-12 columns">
      <label class="name_label" for="name">Name</label>
      <%= f.text_field :name, id: "name", placeholder: "Name", :required => true%>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <label class="email_label" for="email">E-mail Address</label>
      <%= f.text_field :email, id: "email", placeholder: "E-mail Address", :required => true %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <label class="phone_label" for="phone">Phone Number</label>
      <%= f.text_field :phone, id: "phone", placeholder: "Phone Number", :required => true %>
    </div>
  </div>
  <%= f.submit "RESERVE YOUR PHOTOSHOOT", class: "large-6 button expand"%>
  <% end %>
</div>

